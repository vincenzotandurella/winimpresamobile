<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.winimpresa.mobile.RilascioActivity" >

   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hai finito tutte le attivita , Rilascia le tue operazioni cliccando sul tasto rilascia. \n\n  Importante avere una buona connessione Internet" />

  
    
    
    <Button 
        android:id="@+id/rilascio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#fff"
        android:text="Rilascia"
        android:padding="10dp"
        android:background="@layout/pressed_button"
         android:onClick="syncWithDrop"   
        
        />
    
    
     <Button 
        android:id="@+id/returnBuono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:text="Torna alla lista"
        android:padding="10dp"
        android:background="@layout/pressed_button"
         android:onClick="tornaAiBuoni"   
        
        />
    <ProgressBar
        android:id="@+id/loader" 
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />   
    
    
   </LinearLayout>


</RelativeLayout>
