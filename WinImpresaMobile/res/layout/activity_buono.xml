<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.winimpresa.mobile.BuonoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingRight="10sp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                
               <TableLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   
                   <TableRow
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent" 
                       >
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/labelMontNCommessa"
                    android:textColor="#fff" />
                     
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/numeroCommessa"
                    android:layout_weight="1"
                    android:textColor="#000" />
                    
                    
                        <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="normal|italic"
                    android:id="@+id/dataMon"
                    android:textColor="#000" />
                  
                    </TableRow>
                   
                   
                   <TableRow
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent" 
                       >
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/labelMontNumero"
                    android:textColor="#fff" />
                     
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/monitoraggioNumero"
                    android:textColor="#000" />
                    
                    
                      <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/tipo"
                    android:textColor="#000" />
                    
                       
                   </TableRow>
                   
                   
               </TableLayout> 
                
                
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:hint="@string/labelNote"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/noteIntervento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/labelTimeStart"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/oraInizio"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_style"
                        android:gravity="center" />

                    <ImageButton
                        android:id="@+id/buttonOraInizio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0"
                        android:background="@layout/style_button_addbuono"
                        android:contentDescription="@string/labelTimeStart"
                        android:src="@android:drawable/ic_lock_idle_alarm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/labelTimeEnd"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/oraFine"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_style"
                        android:gravity="center" />

                    <ImageButton
                        android:id="@+id/buttonOraFine"
                         android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0"
                        android:background="@layout/style_button_addbuono"
                        android:contentDescription="@string/labelTimeEnd"
                        android:src="@android:drawable/ic_lock_idle_alarm" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:hint="@string/labelReports"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/segnalazioni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="#000"
                    android:textSize="13sp" />

                

               <TableLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                    
                   <TableRow 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    
                   <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                     android:layout_weight="1"
                    android:gravity="left"
                    android:hint="@string/labelMotor"
                    android:textColor="#fff" />
                    
                    <TextView
                    
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:hint="Km"
                    android:textColor="#fff" />
                    
                </TableRow>
                <TableRow 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    
                    <EditText
                    android:id="@+id/automezzo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_style"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:inputType="text"
                    android:textSize="13sp" />
                    
                     <EditText
                    android:id="@+id/km"
                    android:layout_width="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:inputType="number"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="13sp" />
                    
                </TableRow>

                
              </TableLayout> 
                  
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:hint="@string/labelComunication"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/comunicazioneOperatore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:hint="@string/labelAndam"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/andamLavori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/andam"
                    android:gravity="start"
                    android:textSize="13sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/settori"
            android:text="" 
          
            android:background="@layout/pressed_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:layout_weight="1"
            />
         <View 
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="#fff"
             />
          <Button
            android:id="@+id/magazzino"
            android:text="Magazzino" 
            android:background="@layout/pressed_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:textColor="#fff"
            android:layout_weight="1"
            />
            
    </LinearLayout>

</LinearLayout>